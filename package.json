{
  "name": "nexi-client",
  "version": "1.3.01",
  "description": "Venge.io Client",
  "main": "main.js",
  "scripts": {
    "start": "electron . ",
    "postinstall": "install-app-deps",
    "build-win": "electron-builder -w",
    "build-mac": "electron-builder -m",
    "build-linux": "electron-builder -l",
    "build-all": "electron-builder -mwl"
  },
  "build": {
    "appId": "org.electron.NeXiClient",
    "asar": false,
    "productName": "NeXi-Client",
    "win": {
      "target": "nsis",
      "icon": "build/game.png",
      "publish": [
        {
          "provider": "github",
          "url": "https://github.com/NeXi-Client/NeXi-Client/releases"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "license": "",
      "artifactName": "NeXi-Client-Windows-${version}.${ext}",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "shortcutName": "NeXi-Client",
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/game.png"
    },
    "dmg": {
      "title": "NeXi-Client-${version}",
      "artifactName": "NeXi-Client-Mac-${version}.dmg"
    },
    "linux": {
      "target": [
        "deb",
        "snap",
        "rpm"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NeXi-Client/NeXi-Client.git"
  },
  "author": "NeXi",
  "license": "ISC",
  "dependencies": {
    "dialogs": "^2.0.1",
    "discord-rpc": "^3.1.4",
    "discord.js": "^12.3.1",
    "electron-is-dev": "^1.2.0",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.2.4",
    "electron-prompt": "^1.6.0",
    "electron-store": "^6.0.0",
    "electron-updater": "^4.3.5",
    "update-electron-app": "^1.5.0",
    "v8-compile-cache": "^2.1.1"
  },
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^22.8.0"
  }
}
